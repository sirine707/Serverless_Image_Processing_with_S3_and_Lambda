{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["node", "@types/jest"],
    "lib": ["es2017", "dom"],
    "strict": false,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["package", "dist", "**/*.map"]
}
