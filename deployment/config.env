# Configuration settings for the Serverless Image Processing solution
# Modify these values to customize your deployment

# Infrastructure settings
ENABLE_DYNAMODB=true
ENABLE_CORS=true
CORS_ORIGIN="*"
ENABLE_SIGNATURE=true
ENABLE_DEFAULT_FALLBACK_IMAGE=false
DEFAULT_FALLBACK_IMAGE_BUCKET=""
DEFAULT_FALLBACK_IMAGE_KEY=""
LOG_RETENTION_DAYS=7

# Performance settings
MEMORY_SIZE=1024
TIMEOUT=30
CACHE_CONTROL_MAX_AGE=86400  # 1 day in seconds

# Lambda settings
NODE_RUNTIME="nodejs18.x"
ARCHITECTURE="arm64"  # Options: x86_64, arm64 

# CloudFront settings
PRICE_CLASS="PriceClass_100"  # Options: PriceClass_100, PriceClass_200, PriceClass_All
HTTP_VERSION="http2"
IPV6_ENABLED=true
